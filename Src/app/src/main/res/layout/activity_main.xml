<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:an="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    an:layout_width="match_parent"
    an:layout_height="match_parent"
    tools:context="com.doesnothaveadomain.splitunitcost.MainActivity">

    <TextView
        an:id="@+id/textView"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:text="Total Usage"
        an:layout_marginStart="16dp"
        an:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textView2"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="16dp"
        an:layout_marginTop="99dp"
        an:text="Usage of 2nd Meter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        an:id="@+id/buttonCalculate"
        an:layout_width="158dp"
        an:layout_height="wrap_content"
        an:layout_marginBottom="8dp"
        an:layout_marginLeft="18dp"
        an:layout_marginTop="8dp"
        an:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.306"/>

    <TextView
        an:id="@+id/textView3"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="16dp"
        an:layout_marginTop="221dp"
        an:text="Bill of 1st Meter (+VAT)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textView4"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="20dp"
        an:layout_marginTop="284dp"
        an:text="Bill of 2nd Meter (+VAT)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        an:id="@+id/editTextTotalUsage"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginEnd="16dp"
        an:layout_marginRight="16dp"
        an:ems="10"
        an:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        an:layout_marginTop="29dp"/>

    <EditText
        an:id="@+id/editTextUsageOf2ndMeter"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginRight="16dp"
        an:layout_marginTop="87dp"
        an:ems="10"
        an:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textViewBillOf1stMeter"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginStart="190dp"
        an:layout_marginLeft="190dp"
        an:layout_marginTop="221dp"
        an:width="120dp"
        an:text="-"
        an:textIsSelectable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textViewBillOf2ndMeter"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="172dp"
        an:layout_marginTop="284dp"
        an:width="120dp"
        an:text="-"
        an:textIsSelectable="true"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textView6"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="20dp"
        an:layout_marginTop="360dp"
        an:width="150dp"
        an:text="Total Charge (without VAT &amp; Demand charge)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/txtTotalCharge"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="188dp"
        an:layout_marginTop="364dp"
        an:text="-"
        an:textIsSelectable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
