<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:an="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    an:layout_width="match_parent"
    an:layout_height="match_parent"
    tools:context="com.doesnothaveadomain.splitunitcost.MainActivity">

    <TextView
        an:id="@+id/textView"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:text="Total Usage"
        an:layout_marginStart="16dp"
        an:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        an:id="@+id/editTextTotalUsageInput"
        an:layout_width="110dp"
        an:layout_height="wrap_content"
        an:layout_marginRight="16dp"
        an:layout_marginTop="28dp"
        an:ems="10"
        an:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        an:id="@+id/textView2"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="16dp"
        an:layout_marginTop="80dp"
        an:text="Usage of 2nd Meter :"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        an:id="@+id/editTextSubmeterUnitCurrentInput"
        an:layout_width="110dp"
        an:layout_height="wrap_content"
        an:layout_marginRight="16dp"
        an:layout_marginTop="148dp"
        an:ems="10"
        an:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        an:id="@+id/editTextSubmeterBillPrevInput"
        an:layout_width="110dp"
        an:layout_height="wrap_content"
        an:layout_marginRight="16dp"
        an:layout_marginTop="96dp"
        an:ems="10"
        an:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textView7"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="16dp"
        an:layout_marginTop="228dp"
        an:text="Water"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        an:id="@+id/editTextWaterBillInput"
        an:layout_width="110dp"
        an:layout_height="wrap_content"
        an:layout_marginRight="16dp"
        an:layout_marginTop="208dp"
        an:ems="10"
        an:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textView8"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginLeft="16dp"
        an:layout_marginTop="284dp"
        an:text="Gas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        an:id="@+id/editTextGasInput"
        an:layout_width="110dp"
        an:layout_height="wrap_content"
        an:layout_marginRight="16dp"
        an:layout_marginTop="268dp"
        an:ems="10"
        an:inputType="number"
        an:text="800"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        an:id="@+id/buttonCalculate"
        an:layout_width="158dp"
        an:layout_height="wrap_content"
        an:layout_marginBottom="8dp"
        an:layout_marginTop="8dp"
        an:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838"/>

    <TextView
        an:id="@+id/textView9"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginEnd="12dp"
        an:layout_marginTop="112dp"
        an:text="Previous Reading"
        app:layout_constraintEnd_toStartOf="@+id/editTextSubmeterBillPrevInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        an:id="@+id/textView10"
        an:layout_width="wrap_content"
        an:layout_height="wrap_content"
        an:layout_marginEnd="16dp"
        an:layout_marginTop="164dp"
        an:text="Current Reading"
        app:layout_constraintEnd_toStartOf="@+id/editTextSubmeterUnitCurrentInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
